@model Livro
@{
    ViewData["Title"] = "Editar Livro";
}

<div class="content-box">
    <div class="element-wrapper">
        <div class="element-box">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend>Dados do livro</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Titulo)
                        @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Titulo) })
                        @Html.ValidationMessageFor(model => model.Titulo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Autor)
                        @Html.TextBoxFor(model => model.Autor, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Autor) })
                        @Html.ValidationMessageFor(model => model.Autor)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Editora)
                        @Html.TextBoxFor(model => model.Editora, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Editora) })
                        @Html.ValidationMessageFor(model => model.Editora)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AnoPublicacao)
                        @Html.TextBoxFor(model => model.AnoPublicacao, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.AnoPublicacao) })
                        @Html.ValidationMessageFor(model => model.AnoPublicacao)
                    </div>
                </fieldset>
                <div class="form-buttons-w">
                    <button class="btn btn-success" type="submit">Salvar</button>
                    <a class="btn btn-primary" href="/Home/">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

